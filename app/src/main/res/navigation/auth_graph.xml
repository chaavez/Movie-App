<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="br.com.portifolio.movieapp.features.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboardingFragment_to_authentication"
            app:destination="@id/authentication"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/onboardingFragment"/>
    </fragment>
    <navigation android:id="@+id/authentication"
        app:startDestination="@id/homeAuthFragment">
        <fragment
            android:id="@+id/homeAuthFragment"
            android:name="br.com.portifolio.movieapp.features.auth.home.HomeAuthFragment"
            android:label="fragment_home_auth"
            tools:layout="@layout/fragment_home_auth" >
            <action
                android:id="@+id/action_homeAuthFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_homeAuthFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="br.com.portifolio.movieapp.features.auth.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" >
            <action
                android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment" />
        </fragment>
        <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="br.com.portifolio.movieapp.features.auth.forgot.ForgotPasswordFragment"
            android:label="fragment_forgot_password"
            tools:layout="@layout/fragment_forgot_password" />
        <fragment
            android:id="@+id/registerFragment"
            android:name="br.com.portifolio.movieapp.features.auth.register.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register" />
    </navigation>
</navigation>